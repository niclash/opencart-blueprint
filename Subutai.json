{
    "name": "${environmentName}",
    "description": "OpenCart",
    "version": "3.0.2.0",
    "author": "https://github.com/happyaron",
    "containers": [
        {
            "hostname": "${webContainerName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "80"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/happyaron/opencart-blueprint/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domainName}"
            },
            {
                "key": "db_name",
                "value": "${dbName}"
            },
            {
                "key": "db_passwd",
                "value": "${dbPasswd}"
            }
        ],
        "groups": [
            {
                "name": "opencart",
                "hostnames": [
                    "${webContainerName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "opencart",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "webContainerName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "opencart",
            "validation": "[a-zA-Z0-9]+"
        },
        "dbName": {
            "description": "Database Name",
            "type": "string",
            "default": "opencart",
            "validation": "[a-zA-Z0-9]+"
        },
        "dbPasswd": {
            "description": "Database Root Password",
            "type": "string",
            "default": "subutai",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
